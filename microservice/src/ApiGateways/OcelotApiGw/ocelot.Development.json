    {
      "DownstreamPathTemplate": "/api/{version}/orders/{any}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5005
        }
      ],
      "UpstreamPathTemplate": "/{version}/orders/{any}",
      "UpstreamHttpMethod": [ "GET", "PUT", "DELETE" ]
